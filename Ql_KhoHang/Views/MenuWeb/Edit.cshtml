@model Ql_KhoHang.Dtos.MenuWebDtos

@{
    ViewData["Title"] = "Sửa Menu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid px-3 my-3">
            <h2 class="mb-4">Sửa Menu</h2>

            <form asp-action="Edit" method="post">
                <input type="hidden" name="MenuId" value="@Model.MenuId" />
                <div class="mb-3">
                    <label for="Name" class="form-label">Tên Menu</label>
                    <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" />
                </div>
                <div class="mb-3">
                    <label for="Order" class="form-label">Thứ tự</label>
                    <input type="number" id="Order" name="Order" class="form-control" value="@Model.Order" />
                </div>
                <div class="mb-3">
                    <label for="Link" class="form-label">Liên kết</label>
                    <input type="text" id="Link" name="Link" class="form-control" value="@Model.Link" />
                </div>
                <div class="mb-3">
                    <label for="Hide" class="form-label">Ẩn</label>
                    <input type="checkbox" id="Hide" name="Hide" @(Model.Hide == true ? "checked" : "") />
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>
