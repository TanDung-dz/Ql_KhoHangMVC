@model List<Ql_KhoHang.Dtos.LoaiKhachHangWebDtos>

@{
    ViewData["Title"] = "Kết quả tìm kiếm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid px-3 my-3">
            <h2 class="mb-3">Kết quả tìm kiếm</h2>

            <div class="card">
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên Loại</th>
                                <th>Chiết Khấu Xuất Hàng</th>
                                <th>Chi Phí Vận Chuyển</th>
                                <th>Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                int index = 1;
                                foreach (var customerType in Model)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>@customerType.TenLoai</td>
                                        <td>@customerType.ChietKhauXuatHang</td>
                                        <td>@customerType.ChiPhiVanChuyen</td>
                                        <td>
                                            <div class="btn-group mr-2">
                                                <a asp-action="Details" asp-route-id="@customerType.MaLoai" class="btn btn-info mr-2">Chi tiết</a>
                                                <a asp-action="Edit" asp-route-id="@customerType.MaLoai" class="btn btn-warning mr-2">Chỉnh sửa</a>
                                                <form asp-action="Delete" asp-route-id="@customerType.MaLoai" method="post" style="display:inline;">
                                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    index++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">Không tìm thấy kết quả nào.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>
