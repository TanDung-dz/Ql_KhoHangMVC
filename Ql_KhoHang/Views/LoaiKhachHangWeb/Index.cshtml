@model List<Ql_KhoHang.Dtos.LoaiKhachHangWebDtos>

@{
    ViewData["Title"] = "LoaiKhachHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid px-3 my-3">
            <div class="row mb-3">
                <div class="col-md-6 text-right">
                    <form asp-action="Search" asp-controller="LoaiKhachHangWeb" method="get">
                        <div class="input-group">
                            <input type="text" name="keyword" class="form-control mr-2" placeholder="Nhập từ khóa tìm kiếm..." />
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary mr-2">Tìm kiếm</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    Danh sách Loại Khách Hàng
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên Loại</th>
                                <th>Chiết Khấu Xuất Hàng</th>
                                <th>Chi Phí Vận Chuyển</th>
                                <th>Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                int index = 1;
                                foreach (var customerType in Model)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>@customerType.TenLoai</td>
                                        <td>@customerType.ChietKhauXuatHang</td>
                                        <td>@customerType.ChiPhiVanChuyen</td>
                                        <td>
                                            <div class="btn-group mr-2">
                                                <a asp-action="Details" asp-route-id="@customerType.MaLoai" class="btn btn-info mr-2">Chi tiết</a>
                                                <a asp-action="Edit" asp-route-id="@customerType.MaLoai" class="btn btn-warning mr-2">Chỉnh sửa</a>
                                                <form asp-action="Delete" asp-route-id="@customerType.MaLoai" method="post" style="display:inline;">
                                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    index++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">Không có loại khách hàng nào.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-end">
                        <a asp-action="Create" asp-controller="LoaiKhachHangWeb" class="btn btn-success">Thêm mới Loại Khách Hàng</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
