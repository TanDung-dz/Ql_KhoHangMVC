@model Ql_KhoHang.Dtos.LoaiSanPhamWebDtos

@{
    ViewData["Title"] = "Chi Tiết Danh Mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid px-3 my-3">
            <div class="row">
                <div>
                    <h4>Thông tin Loại Sản Phẩm</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Mã Loại Sản Phẩm</dt>
                        <dd class="col-sm-10">@Model.MaLoaiSanPham</dd>

                        <dt class="col-sm-2">Tên Loại Sản Phẩm</dt>
                        <dd class="col-sm-10">@Model.TenLoaiSanPham</dd>
                    </dl>
                </div>

                <div>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                    <a asp-action="Edit" asp-route-id="Model.MaLoaiSanPham" class="btn btn-primary">Chỉnh sửa</a>
                    <form asp-action="Delete" asp-route-id="Model.MaLoaiSanPham" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

