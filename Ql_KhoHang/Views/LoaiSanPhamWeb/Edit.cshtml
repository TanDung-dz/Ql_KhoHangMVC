@model Ql_KhoHang.Dtos.LoaiSanPhamWebDtos

@{
    ViewData["Title"] = "Chỉnh sửa Loại Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid px-3 my-3">
            <div class="row">
                <h2>Chỉnh sửa Loại Sản Phẩm</h2>

                <form asp-action="Edit" method="post">
                    <div class="form-group">
                        <label asp-for="TenLoaiSanPham">Tên Loại Sản Phẩm</label>
                        <input asp-for="TenLoaiSanPham" class="form-control" />
                        <span asp-validation-for="TenLoaiSanPham" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary mt-3">Lưu Thay Đổi</button>
                    <a asp-action="Index" class="btn btn-secondary mt-3">Hủy</a>
                </form>
            </div>
        </div>
    </div>
</div>

