@model List<Ql_KhoHang.Dtos.HangSanXuatWebDtos>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid px-3 my-3">
            <div class="row mb-3">
                <h1>Kết quả tìm kiếm</h1>

                @if (Model.Any())
                {
                    <table class="table table-bordered mt-3">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Tên Hãng Sản Xuất</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MaHangSanXuat</td>
                                    <td>@item.TenHangSanXuat</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.MaHangSanXuat" class="btn btn-info">Chi tiết</a>
                                        <a asp-action="Edit" asp-route-id="@item.MaHangSanXuat" class="btn btn-warning">Sửa</a>
                                        <form asp-action="Delete" asp-route-id="@item.MaHangSanXuat" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Không tìm thấy kết quả phù hợp.</p>
                }

                <a asp-action="Index" class="btn btn-secondary">Trở về</a>
            </div>
        </div>
    </div>
</div>

