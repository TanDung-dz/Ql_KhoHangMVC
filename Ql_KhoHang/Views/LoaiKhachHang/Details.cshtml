@model Ql_KhoHang.Dtos.LoaiKhachHangDto

@{
    ViewData["Title"] = "Chi tiết Loại Khách Hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">Chi tiết Loại Khách Hàng</h2>

<div class="card">
    <div class="card-header">
        Thông Tin Loại Khách Hàng
    </div>
    <div class="card-body">
        <table class="table table-bordered align-middle">
            <tr>
                <th class="text-start" style="width: 30%;">Mã Loại</th>
                <td>@Model.MaLoai</td>
            </tr>
            <tr>
                <th class="text-start">Tên Loại</th>
                <td>@Model.TenLoai</td>
            </tr>
            <tr>
                <th class="text-start">Chiết Khấu Xuất Hàng</th>
                <td>@Model.ChietKhauXuatHang%</td>
            </tr>
            <tr>
                <th class="text-start">Chi Phí Vận Chuyển</th>
                <td>@Model.ChiPhiVanChuyen (VNĐ)</td>
            </tr>
        </table>
    </div>
</div>

<div class="mt-3 text-end">
    <a asp-action="Index" class="btn btn-secondary me-2">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
    <a asp-action="Edit" asp-route-id="@Model.MaLoai" class="btn btn-warning">
        <i class="fas fa-edit"></i> Sửa
    </a>
</div>
