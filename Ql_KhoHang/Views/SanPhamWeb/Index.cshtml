@model IEnumerable<Ql_KhoHang.Dtos.SanPhamWebDtos>
@{
    ViewData["Title"] = "SanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid px-3 my-3">
            <div class="row">
                <h2>Danh Sách Sản Phẩm</h2>

                <div class="mb-3 d-flex justify-content-between">
                    <!-- Nút thêm mới sản phẩm -->
                    <a asp-action="Create" class="btn btn-primary">Thêm Mới Sản Phẩm</a>

                    <!-- Form tìm kiếm sản phẩm -->
                    <form asp-action="Search" method="get" class="form-inline d-flex">
                        <input type="text" name="keyword" class="form-control" placeholder="Search by keyword" />
                        <button type="submit" class="btn btn-secondary ml-2">Tìm kiếm</button>
                    </form>
                </div>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Mã Sản Phẩm</th>
                            <th>Tên Sản Phẩm</th>
                            <th>Mô Tả</th>
                            <th>Hình Ảnh</th>
                            <th>Số Lượng</th>
                            <th>Đơn Giá</th>
                            <th>Xuất Xứ</th>
                            <th>Loại Sản Phẩm</th>
                            <th>Hãng Sản Xuất</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sanpham in Model)
                        {
                            <tr>
                                <td>@sanpham.MaSanPham</td>
                                <td>@sanpham.TenSanPham</td>
                                <td>@sanpham.Mota</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(sanpham.Image))
                                    {
                                        <img src="@sanpham.Image" alt="@sanpham.TenSanPham" width="50" height="50" />
                                    }
                                </td>
                                <td>@sanpham.SoLuong</td>
                                <td>@sanpham.DonGia?.ToString("C")</td>
                                <td>@sanpham.XuatXu</td>
                                <td>@sanpham.TenLoaiSanPham</td>
                                <td>@sanpham.TenHangSanXuat</td>
                                <td>
                                    <!-- Nút hành động -->
                                    <a asp-action="Details" asp-route-id="@sanpham.MaSanPham" class="btn btn-info btn-sm">Xem</a>
                                    <a asp-action="Edit" asp-route-id="@sanpham.MaSanPham" class="btn btn-warning btn-sm">Sửa</a>
                                    <form asp-action="Delete" asp-route-id="@sanpham.MaSanPham" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
