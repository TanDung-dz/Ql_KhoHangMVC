<div class="content container-fluid px-3 my-3">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <div class="mt-5">
                    <h4 class="card-title float-left mt-2">San Pham</h4>
                    <a asp-action="Create" class="btn btn-primary float-right">Them Moi San Pham</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-3 d-flex justify-content-between">
        <!-- Form tìm kiếm sản phẩm -->
        <form asp-action="Search" method="get" class="form-inline d-flex">
            <input type="text" name="keyword" class="form-control" placeholder="Search by keyword" />
            <button type="submit" class="btn btn-secondary ml-2">Search</button>
        </form>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card card-table">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="datatable table table-striped table-hover table-center mb-0">
                            <thead>
                                <tr>
                                    <th>Ma San Pham</th>
                                    <th>Ten San Pham</th>
                                    <th>Mo Ta</th>
                                    <th>Image</th>
                                    <th>Them Ngay</th>
                                    <th>Cap Nhap Ngay</th>
                                    <th>Trang Thai</th>
                                    <th>Hanh Dong</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var sanpham in Model)
                                {
                                    <tr>
                                        <td>@sanpham.MaSanPham</td>
                                        <td>@sanpham.TenSanPham</td>
                                        
                                        <td>
                                            @if (!string.IsNullOrEmpty(sanpham.Image))
                                            {
                                                <img src="@sanpham.Image" alt="@sanpham.TenSanPham" width="50" height="50" />
                                            }
                                        </td>
                                        
                                        <td>
                                            <!-- Nút hành động -->
                                            <a asp-action="Details" asp-route-id="@sanpham.MaSanPham" class="btn btn-info btn-sm mr-2" title="View">View</a>
                                            <a asp-action="Edit" asp-route-id="@sanpham.MaSanPham" asp-controller="SanPham" class="btn btn-warning btn-sm mr-2" title="Edit">Edit</a>
                                            <form asp-action="Delete" asp-route-id="@sanpham.MaSanPham" asp-controller="SanPham" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                                <button type="submit" class="btn btn-danger btn-sm" title="Delete">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Phân trang nếu cần -->
    <div class="pagination-container mt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
