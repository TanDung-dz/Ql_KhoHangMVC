@using Ql_KhoHang.Dtos
@{
    ViewData["Title"] = "SanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid px-3 my-3">
            <div class="row">
                <h2>SanPham</h2>

                <div class="mb-3 d-flex justify-content-between">
                    <!-- Nút thêm mới danh mục -->
                    <a asp-action="Create" class="btn btn-primary">Them Moi San Pham</a>

                    <!-- Form tìm kiếm danh mục -->
                    <form asp-action="Search" method="get" class="form-inline d-flex">
                        <input type="text" name="keyword" class="form-control" placeholder="Search by keyword" />
                        <button type="submit" class="btn btn-secondary ml-2">Search</button>
                    </form>
                </div>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Ma San Pham</th>
                            <th>Ten San Pham</th>
                            <th>Mo Ta</th>
                            <th>Image</th>
                            <th>Them Ngay</th>
                            <th>Cap Nhap Ngay</th>                                           
                            <th>TrangThai</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sanpham in Model)
                        {
                            <tr>
                                <td>@sanpham.MaSanPham</td>
                                <td>@sanpham.TenSanPham</td>
                                <td>@sanpham.Details</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(sanpham.Image))
                                    {
                                        <img src="@sanpham.Image" alt="@sanpham.TenSanPham" width="50" height="50" />
                                    }
                                </td>
                                <td>@sanpham.AddDate?.ToString("yyyy-MM-dd")</td>
                                <td>@sanpham.UpdateDate?.ToString("yyyy-MM-dd")</td>
                                <td>@sanpham.Order</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(sanpham.Link))
                                    {
                                        <a href="@sanpham.Link" target="_blank">View Link</a>
                                    }
                                </td>
                                <td>@(sanpham.Hide == true ? "Yes" : "No")</td>
                                <td>
                                    <!-- Nút hành động -->
                                    <a asp-action="Details" asp-route-id="@sanpham.CategoryId" class="btn btn-info btn-sm">View</a>
                                    <form asp-action="Edit" asp-route-id="@sanpham.CategoryId" asp-controller="SanPham" method="post" class="btn btn-warning btn-sm">Edit</form>
                                    <form asp-action="Delete" asp-route-id="@sanpham.CategoryId" asp-controller="SanPham" method="post" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this category?');">Delete</form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

