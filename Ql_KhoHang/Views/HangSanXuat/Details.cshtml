@model Ql_KhoHang.Dtos.HangSanXuatDto

@{
    ViewData["Title"] = "Chi tiết Hãng Sản Xuất";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">Chi tiết Hãng Sản Xuất</h2>

<table class="table table-bordered">
    <tr>
        <th>Mã Hãng Sản Xuất</th>
        <td>@Model.MaHangSanXuat</td>
    </tr>
    <tr>
        <th>Tên Hãng Sản Xuất</th>
        <td>@Model.TenHangSanXuat</td>
    </tr>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    <a asp-action="Edit" asp-route-id="@Model.MaHangSanXuat" class="btn btn-warning">Sửa</a>
</div>
