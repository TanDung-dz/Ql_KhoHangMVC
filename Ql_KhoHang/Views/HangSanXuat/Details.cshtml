@model Ql_KhoHang.Dtos.HangSanXuatDto

@{
    ViewData["Title"] = "Chi Tiết Hãng Sản Xuất";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">Chi Tiết Hãng Sản Xuất</h2>

<div class="card">
    <div class="card-header">
        Thông Tin Hãng Sản Xuất
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <tr>
                <th>Mã Hãng Sản Xuất</th>
                <td>@(!string.IsNullOrEmpty(Model.MaHangSanXuat.ToString()) ? Model.MaHangSanXuat : "Không có thông tin")</td>
            </tr>
            <tr>
                <th>Tên Hãng Sản Xuất</th>
                <td>@(!string.IsNullOrEmpty(Model.TenHangSanXuat) ? Model.TenHangSanXuat : "Không có thông tin")</td>
            </tr>
        </table>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary me-2">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
    <a asp-action="Edit" asp-route-id="@Model.MaHangSanXuat" class="btn btn-warning">
        <i class="fas fa-edit"></i> Sửa
    </a>
</div>
