@model Ql_KhoHang.Dtos.SanPhamDto

@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


            <h2 class="mb-4">Chi Tiết Sản Phẩm</h2>

            <!-- Thông tin sản phẩm -->
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Mã Sản Phẩm:</dt>
                        <dd class="col-sm-8">@Model.MaSanPham</dd>

                        <dt class="col-sm-4">Tên Sản Phẩm:</dt>
                        <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.TenSanPham) ? Model.TenSanPham : "Không có thông tin")</dd>

                        <dt class="col-sm-4">Mô Tả:</dt>
                        <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.Mota) ? Model.Mota : "Không có thông tin")</dd>

                        <dt class="col-sm-4">Số Lượng:</dt>
                        <dd class="col-sm-8">@Model.SoLuong?.ToString() ?? "Không có thông tin"</dd>

                        <dt class="col-sm-4">Đơn Giá:</dt>
                        <dd class="col-sm-8">@Model.DonGia?.ToString("C") ?? "Không có thông tin"</dd>

                        <dt class="col-sm-4">Khối Lượng:</dt>
                        <dd class="col-sm-8">@Model.KhoiLuong?.ToString("N2") ?? "Không có thông tin" (kg)</dd>

                        <dt class="col-sm-4">Kích Thước:</dt>
                        <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.KichThuoc) ? Model.KichThuoc : "Không có thông tin")</dd>

                        <dt class="col-sm-4">Xuất Xứ:</dt>
                        <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.XuatXu) ? Model.XuatXu : "Không có thông tin")</dd>

                        <dt class="col-sm-4">Loại Sản Phẩm:</dt>
                        <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.TenLoaiSanPham) ? Model.TenLoaiSanPham : "Không có thông tin")</dd>

                        <dt class="col-sm-4">Hãng Sản Xuất:</dt>
                        <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.TenHangSanXuat) ? Model.TenHangSanXuat : "Không có thông tin")</dd>

                        <dt class="col-sm-4">Ngày Tạo:</dt>
                        <dd class="col-sm-8">@Model.NgayTao?.ToString("dd/MM/yyyy") ?? "Không có thông tin"</dd>

                        <dt class="col-sm-4">Ngày Cập Nhật:</dt>
                        <dd class="col-sm-8">@Model.NgayCapNhat?.ToString("dd/MM/yyyy") ?? "Không có thông tin"</dd>

                        <dt class="col-sm-4">Trạng Thái:</dt>
                        <dd class="col-sm-8">@Model.TrangThai.HasValue ? (Model.TrangThai.Value ? "Hoạt động" : "Không hoạt động") : "Không có thông tin"</dd>

                        <dt class="col-sm-4">Ẩn Sản Phẩm:</dt>
                        <dd class="col-sm-8">@Model.Hide.HasValue ? (Model.Hide.Value ? "Có" : "Không") : "Không có thông tin"</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <!-- Hiển thị hình ảnh sản phẩm -->
                    <h5>Hình Ảnh:</h5>
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="@Model.Image" alt="@Model.TenSanPham" class="img-fluid mb-3" style="max-width: 100%;" />
                    }
                    else
                    {
                        <p class="text-muted">Không có hình ảnh cho sản phẩm này.</p>
                    }

                    <!-- Hiển thị mã vạch sản phẩm -->
                    <h5>Mã Vạch:</h5>
                    @if (!string.IsNullOrEmpty(Model.MaVach))
                    {
                        <img src="@Model.MaVach" alt="Mã vạch sản phẩm" class="img-fluid" style="max-width: 100%; height: auto;" />
                    }
                    else
                    {
                        <p class="text-muted">Không có mã vạch cho sản phẩm này.</p>
                    }
                </div>
            </div>

<!-- Nút hành động -->
<div class="mt-4 d-flex justify-content-start">
    <!-- Nút Quay lại -->
    <a asp-action="Index" class="btn btn-secondary me-2" data-bs-toggle="tooltip" title="Quay lại">
        <i class="fas fa-arrow-left"></i>
    </a>
    <!-- Nút Sửa -->
    <a asp-action="Edit" asp-route-id="@Model.MaSanPham" class="btn btn-warning" data-bs-toggle="tooltip" title="Chỉnh sửa">
        <i class="fas fa-edit"></i>
    </a>
</div>

