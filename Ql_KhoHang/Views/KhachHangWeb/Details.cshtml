@model Ql_KhoHang.Dtos.KhachHangDto
@{
    ViewData["Title"] = "Chi Tiết Khách Hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid px-3 my-3">
            <h2>Chi Tiết Khách Hàng</h2>
            <div class="form-group">
                <label for="MaKhachHang">Mã Khách Hàng</label>
                <input type="text" class="form-control" id="MaKhachHang" value="@Model.MaKhachHang" readonly />
            </div>

            <div class="form-group">
                <label for="TenKhachHang">Tên Khách Hàng</label>
                <input type="text" class="form-control" id="TenKhachHang" value="@Model.TenKhachHang" readonly />
            </div>

            <div class="form-group">
                <label for="MaLoai">Loại Khách Hàng</label>
                <input type="text" class="form-control" id="MaLoai" value="@Model.TenLoaiKhachHang" readonly />
            </div>

            <a asp-action="Edit" asp-route-id="@Model.MaKhachHang" class="btn btn-warning">Sửa</a>
            <a asp-action="Index" class="btn btn-secondary">Trở Về</a>
        </div>
    </div>
</div>
