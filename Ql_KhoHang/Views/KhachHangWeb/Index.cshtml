@model IEnumerable<Ql_KhoHang.Dtos.KhachHangDto>
@{
    ViewData["Title"] = "Khách Hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid px-3 my-3">
            <div class="row">
                <h2>Danh Sách Khách Hàng</h2>

                <div class="mb-3 d-flex justify-content-between">
                    <!-- Nút thêm mới khách hàng -->
                    <a asp-action="Create" class="btn btn-primary">Thêm Mới Khách Hàng</a>

                    <!-- Form tìm kiếm khách hàng -->
                    <form asp-action="Index" method="get" class="form-inline d-flex">
                        <input type="text" name="keyword" class="form-control" placeholder="Tìm kiếm theo tên" value="@ViewBag.Keyword" />
                        <button type="submit" class="btn btn-secondary ml-2">Tìm kiếm</button>
                    </form>
                </div>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Mã Khách Hàng</th>
                            <th>Tên Khách Hàng</th>
<th>Số điện thoại</th>
<th>Địa chỉ</th>
<th>Email</th>
                            <th>Loại Khách Hàng</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>@customer.MaKhachHang</td>
                                <td>@customer.TenKhachHang</td>
                                <td>@customer.SoDt</td>
                                <td>@customer.Diachi</td>
                                <td>@customer.Email</td>
                                <td>@customer.TenLoaiKhachHang</td>
                                <td>
                                    <!-- Nút hành động -->
                                    <a asp-action="Details" asp-route-id="@customer.MaKhachHang" class="btn btn-info btn-sm">Xem</a>
                                    <a asp-action="Edit" asp-route-id="@customer.MaKhachHang" class="btn btn-warning btn-sm">Sửa</a>
                                    <form asp-action="Delete" asp-route-id="@customer.MaKhachHang" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa khách hàng này?');">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Phân trang -->
                <nav>
                    <ul class="pagination">
                        <!-- Nút quay lại -->
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage - 1)&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">Trước</a>
                            </li>
                        }

                        <!-- Danh sách các trang -->
                        @for (var i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?pageNumber=@i&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">@i</a>
                            </li>
                        }

                        <!-- Nút tiến -->
                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage + 1)&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">Sau</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Hiển thị thông báo thành công
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Thành công!',
                    text: '@Html.Raw(TempData["SuccessMessage"])',
                    icon: 'success',
                    confirmButtonText: 'OK'
                                });
            </text>
        }

            // Hiển thị thông báo lỗi
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Lỗi!',
                    text: '@Html.Raw(TempData["ErrorMessage"])',
                    icon: 'error',
                    confirmButtonText: 'OK'
                                });
            </text>
        }
    </script>
}
