@model IEnumerable<Ql_KhoHang.Dtos.KiemKeDto>
@{
    ViewData["Title"] = "Phiếu Kiểm Kê";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <h2>Danh Sách Phiếu Kiểm Kê</h2>

    <div class="mb-3 d-flex justify-content-between">
        <!-- Nút thêm mới phiếu kiểm kê -->
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> <!-- Biểu tượng thêm mới -->
        </a>

        <!-- Form tìm kiếm phiếu kiểm kê -->
        <form asp-action="Index" method="get" class="form-inline d-flex">
            <input type="text" name="keyword" class="form-control" placeholder="Search by keyword" value="@ViewBag.Keyword" />
            <button type="submit" class="btn btn-secondary ml-2">
                <i class="fas fa-search"></i> <!-- Biểu tượng tìm kiếm -->
            </button>
        </form>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã Phiếu</th>
                <th>Ngày Kiểm Kê</th>
                <th>Nhân Viên Kiểm Kê</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var kiemKe in Model)
                {
                    <tr>
                        <td>@kiemKe.MaKiemKe</td>
                        <td>@(kiemKe.NgayKiemKe.HasValue ? kiemKe.NgayKiemKe.Value.ToString("dd/MM/yyyy") : "Chưa có ngày")</td>
                        <td>@kiemKe.TenNhanVienKho</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@kiemKe.MaKiemKe" class="btn btn-info btn-sm" title="Chi tiết">
                                    <i class="fas fa-eye"></i> <!-- Biểu tượng chi tiết -->
                                </a>
                                <a asp-action="Edit" asp-route-id="@kiemKe.MaKiemKe" class="btn btn-warning btn-sm" title="Sửa">
                                    <i class="fas fa-edit"></i> <!-- Biểu tượng sửa -->
                                </a>
                                <form asp-action="Delete" asp-route-id="@kiemKe.MaKiemKe" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Xóa" onclick="return confirm('Bạn có chắc chắn muốn xóa phiếu kiểm kê này?');">
                                        <i class="fas fa-trash"></i> <!-- Biểu tượng xóa -->
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Không có phiếu kiểm kê nào.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    <nav>
        <ul class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage - 1)&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">
                        <i class="fas fa-chevron-left"></i> <!-- Biểu tượng mũi tên trái -->
                    </a>
                </li>
            }

            @for (var i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?pageNumber=@i&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">@i</a>
                </li>
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage + 1)&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">
                        <i class="fas fa-chevron-right"></i> <!-- Biểu tượng mũi tên phải -->
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>
