@model Ql_KhoHang.Dtos.LoaiSanPhamDto

@{
    ViewData["Title"] = "Chi Tiết Loại Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">Chi Tiết Loại Sản Phẩm</h2>

<div class="card">
    <div class="card-header">
        Thông Tin Loại Sản Phẩm
    </div>
    <div class="card-body">
        <table class="table table-bordered align-middle">
            <tr>
                <th class="text-start" style="width: 30%;">Mã Loại Sản Phẩm</th>
                <td>@Model.MaLoaiSanPham</td>
            </tr>
            <tr>
                <th class="text-start">Tên Loại Sản Phẩm</th>
                <td>@Model.TenLoaiSanPham</td>
            </tr>
        </table>
    </div>
</div>

<div class="mt-3 text-end">
    <a asp-action="Index" class="btn btn-secondary me-2">
        <i class="fas fa-arrow-left"></i> Quay lại danh sách
    </a>
    <a asp-action="Edit" asp-route-id="@Model.MaLoaiSanPham" class="btn btn-warning me-2">
        <i class="fas fa-edit"></i> Chỉnh sửa
    </a>
    <form asp-action="Delete" asp-route-id="@Model.MaLoaiSanPham" method="post" style="display:inline;">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">
            <i class="fas fa-trash"></i> Xóa
        </button>
    </form>
</div>
