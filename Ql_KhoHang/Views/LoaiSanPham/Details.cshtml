@model Ql_KhoHang.Dtos.LoaiSanPhamDto

@{
    ViewData["Title"] = "Chi Tiết Loại Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">Chi Tiết Loại Sản Phẩm</h2>

<table class="table table-bordered">
    <tr>
        <th>Mã Loại Sản Phẩm</th>
        <td>@Model.MaLoaiSanPham</td>
    </tr>
    <tr>
        <th>Tên Loại Sản Phẩm</th>
        <td>@Model.TenLoaiSanPham</td>
    </tr>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    <a asp-action="Edit" asp-route-id="@Model.MaLoaiSanPham" class="btn btn-warning">Chỉnh sửa</a>
    <form asp-action="Delete" asp-route-id="@Model.MaLoaiSanPham" method="post" style="display:inline;">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</button>
    </form>
</div>
