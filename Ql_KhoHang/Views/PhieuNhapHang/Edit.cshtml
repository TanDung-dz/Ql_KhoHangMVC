@model Ql_KhoHang.Dtos.PhieuNhapHangDto
@{
    ViewData["Title"] = "Cập Nhật Phiếu Nhập Hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <h2>Cập Nhật Phiếu Nhập Hàng</h2>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="MaPhieuNhapHang" />

        <!-- Thông tin Phiếu Nhập -->
        <div class="form-group">
            <label for="NgayNhap">Ngày Nhập</label>
            <input asp-for="NgayNhap" type="date" class="form-control" />
            <span asp-validation-for="NgayNhap" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="PhiVanChuyen">Phí Vận Chuyển</label>
            <input asp-for="PhiVanChuyen" type="number" class="form-control" />
            <span asp-validation-for="PhiVanChuyen" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="TrangThai">Trạng Thái</label>
            <input asp-for="TrangThai" type="text" class="form-control" />
            <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="MaNhaCungCap">Nhà Cung Cấp</label>
            <select asp-for="MaNhaCungCap" class="form-control">
                <option value="">-- Chọn Nhà Cung Cấp --</option>
                @if (ViewBag.Suppliers != null)
                {
                    foreach (var supplier in (IEnumerable<Ql_KhoHang.Dtos.NhacungcapDto>)ViewBag.Suppliers)
                    {
                        <option value="@supplier.MaNhaCungCap" selected="@(supplier.MaNhaCungCap == Model.MaNhaCungCap ? "selected" : null)">
                            @supplier.TenNhaCungCap
                        </option>

                    }
                }
            </select>
            <span asp-validation-for="MaNhaCungCap" class="text-danger"></span>
        </div>

        <!-- Chi Tiết Phiếu Nhập -->
        <h4>Chi Tiết Phiếu Nhập Hàng</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Sản Phẩm</th>
                    <th>Số Lượng</th>
                    <th>Đơn Giá Nhập</th>
                    <th>Ảnh</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody id="detail-container">
                @if (Model.Details != null)
                {
                    for (int i = 0; i < Model.Details.Count; i++)
                    {
                        <tr>
                            <td>
                                <select name="Details[@i].MaSanPham" class="form-control">
                                    <option value="">-- Chọn Sản Phẩm --</option>
                                    @if (ViewBag.Products != null)
                                    {
                                        foreach (var product in (IEnumerable<Ql_KhoHang.Dtos.SanPhamDto>)ViewBag.Products)
                                        {
                                            <option value="@product.MaSanPham" selected="@(product.MaSanPham == Model.Details[i].MaSanPham ? "selected" : null)">
                                                @product.TenSanPham
                                            </option>

                                        }
                                    }
                                </select>
                            </td>
                            <td>
                                <input name="Details[@i].SoLuong" type="number" class="form-control" value="@Model.Details[i].SoLuong" />
                            </td>
                            <td>
                                <input name="Details[@i].DonGiaNhap" type="number" class="form-control" value="@Model.Details[i].DonGiaNhap" />
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.Details[i].Image))
                                {
                                    <img src="@Model.Details[i].Image" alt="Ảnh sản phẩm" width="50" height="50" />
                                }
                                <input name="Details[@i].Img" type="file" class="form-control" />
                                <input type="hidden" name="Details[@i].Image" value="@Model.Details[i].Image" />
                            </td>

                            <td>
                                <button type="button" class="btn btn-danger btn-sm remove-detail">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <button type="button" id="add-detail" class="btn btn-primary btn-sm">
            <i class="fas fa-plus-circle"></i> Thêm Chi Tiết
        </button>

        <button type="submit" class="btn btn-success">
            <i class="fas fa-save"></i> Lưu Thay Đổi
        </button>
    </form>
</div>

@section Scripts {
    <script>
        let detailIndex = @Model.Details?.Count ?? 0;

        // Thêm chi tiết
        document.getElementById("add-detail").addEventListener("click", () => {
            const container = document.getElementById("detail-container");
            const newRow = `
                <tr>
                    <td>
                        <select name="Details[${detailIndex}].MaSanPham" class="form-control">
                            <option value="">-- Chọn Sản Phẩm --</option>
                            @foreach (var product in (IEnumerable<Ql_KhoHang.Dtos.SanPhamDto>)ViewBag.Products)
                            {
                                <option value="@product.MaSanPham">@product.TenSanPham</option>
                            }
                        </select>
                    </td>
                    <td>
                        <input name="Details[${detailIndex}].SoLuong" type="number" class="form-control" />
                    </td>
                    <td>
                        <input name="Details[${detailIndex}].DonGiaNhap" type="number" class="form-control" />
                    </td>
                    <td>
                        <input name="Details[${detailIndex}].Img" type="file" class="form-control" />
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger btn-sm remove-detail">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>`;
            container.insertAdjacentHTML("beforeend", newRow);
            detailIndex++;
        });

        // Xóa chi tiết
        document.addEventListener("click", (e) => {
            if (e.target && e.target.closest(".remove-detail")) {
                e.target.closest("tr").remove();
            }
        });
    </script>
}
