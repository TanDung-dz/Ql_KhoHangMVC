@model Ql_KhoHang.Dtos.PhieuNhapHangDto
@{
    ViewData["Title"] = "Chi Tiết Phiếu Nhập Hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <h2>Chi Tiết Phiếu Nhập Hàng</h2>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <table class="table">
        <tr>
            <th>Mã Phiếu</th>
            <td>@Model.MaPhieuNhapHang</td>
        </tr>
        <tr>
            <th>Ngày Nhập</th>
            <td>@(Model.NgayNhap.HasValue ? Model.NgayNhap.Value.ToString("dd/MM/yyyy") : "Chưa có ngày")</td>

        </tr>
        <tr>
            <th>Phí Vận Chuyển</th>
            <td>@Model.PhiVanChuyen</td>
        </tr>
        <tr>
            <th>Trạng Thái</th>
            <td>@Model.TrangThai</td>
        </tr>
        <tr>
            <th>Nhà Cung Cấp</th>
            <td>@Model.TenNhaCungCap</td>
        </tr>
        <tr>
            <th>Người Dùng</th>
            <td>@Model.TenNguoiDung</td>
        </tr>
    </table>

    <h4>Chi Tiết Hàng Nhập</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Sản Phẩm</th>
                <th>Số Lượng</th>
                <th>Đơn Giá Nhập</th>
                <th>Trạng Thái</th>
                <th>Ảnh</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in ViewBag.Details)
            {
                <tr>
                    <td>@detail.TenSanPham</td>
                    <td>@detail.SoLuong</td>
                    <td>@detail.DonGiaNhap</td>
                    <td>@detail.TrangThai</td>
                    <td>
                        @if (!string.IsNullOrEmpty(detail.Image))
                        {
                            <img src="@detail.Image" alt="Image" width="50" height="50" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
