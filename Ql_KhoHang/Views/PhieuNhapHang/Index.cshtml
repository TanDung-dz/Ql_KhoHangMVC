@model IEnumerable<Ql_KhoHang.Dtos.PhieuNhapHangDto>
@{
    ViewData["Title"] = "Phiếu Nhập Hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <h2>Danh Sách Phiếu Nhập Hàng</h2>

    <div class="mb-3 d-flex justify-content-between">
        <!-- Nút thêm mới phiếu nhập -->
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> <!-- Biểu tượng thêm mới -->
        </a>
        <!-- Form tìm kiếm phiếu nhập -->
        <form asp-action="Index" method="get" class="form-inline d-flex">
            <!-- Tìm kiếm từ khóa -->
            <input type="text" name="keyword" class="form-control" placeholder="Search by ID" value="@ViewBag.Keyword" />

            <!-- Lọc theo ngày bắt đầu -->
            <input type="date" name="startDate" class="form-control ml-2" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" />

            <!-- Lọc theo ngày kết thúc -->
            <input type="date" name="endDate" class="form-control ml-2" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" />

            <!-- Nút tìm kiếm -->
            <button type="submit" class="btn btn-secondary ml-2">
                <i class="fas fa-search"></i> <!-- Biểu tượng tìm kiếm -->
            </button>
            <!-- Nút xóa bộ lọc -->
            <a href="@Url.Action("Index")" class="btn btn-light ml-2">
                <i class="fas fa-times"></i> Xóa bộ lọc
            </a>
        </form>

    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã Phiếu</th>
                <th>Ngày Nhập</th>
                <th>Trạng Thái</th>
                <th>Nhà Cung Cấp</th>
                <th>Người Dùng</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var order in Model)
                {
                    <tr>
                        <td>@order.MaPhieuNhapHang</td>
                        <td>@(order.NgayNhap.HasValue ? order.NgayNhap.Value.ToString("dd/MM/yyyy") : "Chưa có ngày")</td>
                        <td>@order.TrangThai</td>
                        <td>@order.TenNhaCungCap</td>
                        <td>@order.TenNguoiDung</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@order.MaPhieuNhapHang" class="btn btn-info btn-sm" title="Chi tiết">
                                    <i class="fas fa-eye"></i> <!-- Biểu tượng chi tiết -->
                                </a>
                                <a asp-action="Edit" asp-route-id="@order.MaPhieuNhapHang" class="btn btn-warning btn-sm" title="Sửa">
                                    <i class="fas fa-edit"></i> <!-- Biểu tượng sửa -->
                                </a>
                                <form asp-action="Delete" asp-route-id="@order.MaPhieuNhapHang" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Xóa" onclick="return confirm('Bạn có chắc chắn muốn xóa phiếu nhập này?');">
                                        <i class="fas fa-trash"></i> <!-- Biểu tượng xóa -->
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">Không có phiếu nhập hàng nào.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    <nav>
        <ul class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage - 1)&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword&startDate=@ViewBag.StartDate&endDate=@ViewBag.EndDate">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>
            }

            @for (var i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?pageNumber=@i&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword&startDate=@ViewBag.StartDate&endDate=@ViewBag.EndDate">@i</a>
                </li>
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage + 1)&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword&startDate=@ViewBag.StartDate&endDate=@ViewBag.EndDate">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>
            }
        </ul>
    </nav>

</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Kích hoạt tooltip
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        // Hiển thị thông báo thành công
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Thành công!',
                    text: '@Html.Raw(TempData["SuccessMessage"])',
                    icon: 'success',
                    confirmButtonText: 'OK'
                                                    });
            </text>
        }

            // Hiển thị thông báo lỗi
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Lỗi!',
                    text: '@Html.Raw(TempData["ErrorMessage"])',
                    icon: 'error',
                    confirmButtonText: 'OK'
                                                    });
            </text>
        }
    </script>
}
