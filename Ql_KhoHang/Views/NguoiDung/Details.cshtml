@model Ql_KhoHang.Dtos.NguoiDungDto

@{
    ViewData["Title"] = "Chi Tiết Người Dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">Chi Tiết Người Dùng</h2>

<div class="card">
    <div class="card-body">
        <!-- Ảnh người dùng -->
        <div class="text-center mb-4">
            @if (!string.IsNullOrEmpty(Model.Anh))
            {
                <img src="@Model.Anh" alt="Ảnh người dùng" class="img-thumbnail rounded-circle" style="width: 150px; height: 150px;" />
            }
            else
            {
                <img src="/images/default-user.png" alt="Mặc định" class="img-thumbnail rounded-circle" style="width: 150px; height: 150px;" />
            }
        </div>

        <!-- Thông tin người dùng -->
        <table class="table table-bordered align-middle">
            <tr>
                <th class="text-start" style="width: 30%;">Mã Người Dùng</th>
                <td>@Model.MaNguoiDung</td>
            </tr>
            <tr>
                <th class="text-start">Tên Đăng Nhập</th>
                <td>@Model.TenDangNhap</td>
            </tr>
            <tr>
                <th class="text-start">Tên Người Dùng</th>
                <td>@Model.TenNguoiDung</td>
            </tr>
            <tr>
                <th class="text-start">Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th class="text-start">Số Điện Thoại</th>
                <td>@Model.Sdt</td>
            </tr>
            <tr>
                <th class="text-start">Ngày Đăng Ký</th>
                <td>@(Model.NgayDk?.ToString("dd/MM/yyyy") ?? "Không có thông tin")</td>
            </tr>
            <tr>
                <th class="text-start">Quyền</th>
                <td>
                    @switch (Model.Quyen)
                    {
                        case 1:
                            @("Quản trị viên")
                            ; break;
                        case 2:
                            @("Người dùng thường")
                            ; break;
                        default:
                            @("Không xác định")
                            ; break;
                    }
                </td>
            </tr>
        </table>
    </div>
    <div class="card-footer text-end">
        <a asp-action="Index2" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
        <a asp-action="Edit" asp-route-id="@Model.MaNguoiDung" class="btn btn-warning">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
    </div>
</div>
