            display: none;
        }

        #chatbot-header {
            background-color: #007bff;
            color: white;
            padding: 10px;
            text-align: center;
            border-radius: 8px 8px 0 0;
        }

        #chatbot-messages {
            height: 350px;
            overflow-y: auto;
            padding: 10px;
            background-color: #f4f7fa;
            border-bottom: 1px solid #ddd;
            border-radius: 0 0 8px 8px;
        }

        #chatbot-input {
            padding: 10px;
