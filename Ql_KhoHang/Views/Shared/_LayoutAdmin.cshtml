            object-fit: cover; /* Đảm bảo hình ảnh không bị méo */
            border-radius: 0; /* Đặt góc cạnh vuông */
            border: 1px solid #ccc; /* Thêm viền (tuỳ chọn) */
        }
        /* Sidebar cho mobile */
        @@media (max-width: 768px) {
            .sidebar {
                position: fixed; /* Đặt sidebar cố định */
                top: 0;
                left: -250px; /* Mặc định ẩn bên ngoài */
                width: 250px;
                height: 100%;
                background-color: #fff;
                box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
                transition: all 0.3s ease;
                z-index: 1000;
            }

                .sidebar.collapsed {
                    left: 0; /* Hiện sidebar khi có class 'collapsed' */
                }

            .main-wrapper {
                margin-left: 0;
            }
        }

        .breadcrumb {
            margin-top: 8px;
