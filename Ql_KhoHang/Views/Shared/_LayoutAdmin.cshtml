    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/js/script.js"></script>
    <script>
        $(document).ready(function () {
            

            // Đóng sidebar khi click bên ngoài (trong chế độ mobile)
            $(document).on('click', function (e) {
                if ($(window).width() <= 768) {
                    if (!$(e.target).closest('.sidebar, #toggle_btn, #mobile_btn').length) {
                        $('.sidebar').removeClass('collapsed');
                    }
                }
            });
        });

        $(document).ready(function () {
            // Initialize slimScroll for sidebar
            $('.sidebar-inner').slimScroll({
                height: '100vh',
                size: '5px',
                color: '#000',
                alwaysVisible: true,
                railVisible: true,
                railColor: '#333',
                railOpacity: 0.2
            });
        });
        $(document).ready(function () {
            // Toggle sidebar
            $(document).ready(function () {
                $('#toggle_btn, #mobile_btn').on('click', function () {
                    $('.sidebar').toggleClass('collapsed');
                    $('.main-wrapper').toggleClass('collapsed');
                });
            });

            $('.sidebar-inner').slimScroll({
                height: '100vh',
                size: '5px',
                color: '#000',
                alwaysVisible: true,
                railVisible: true,
                railColor: '#333',
                railOpacity: 0.2
            });
        });

    </script>
    @await RenderSectionAsync("Scripts", required: false)
