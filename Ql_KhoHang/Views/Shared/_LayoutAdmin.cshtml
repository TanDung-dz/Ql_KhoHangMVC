    <script>
        $(document).ready(function () {


            // Đóng sidebar khi click bên ngoài (trong chế độ mobile)
            $(document).on('click', function (e) {
                if ($(window).width() <= 768) {
                    if (!$(e.target).closest('.sidebar, #toggle_btn, #mobile_btn').length) {
                        $('.sidebar').removeClass('collapsed');
                    }
                }
            });
        });

        $(document).ready(function () {
            // Initialize slimScroll for sidebar
            $('.sidebar-inner').slimScroll({
                height: '100vh',
                size: '5px',
                color: '#000',
                alwaysVisible: true,
                railVisible: true,
                railColor: '#333',
                railOpacity: 0.2
            });
        });
        $(document).ready(function () {
            // Toggle sidebar
            $(document).ready(function () {
                $('#toggle_btn, #mobile_btn').on('click', function () {
                    $('.sidebar').toggleClass('collapsed');
                    $('.main-wrapper').toggleClass('collapsed');
                });
            });

            $('.sidebar-inner').slimScroll({
                height: '100vh',
                size: '5px',
                color: '#000',
                alwaysVisible: true,
                railVisible: true,
                railColor: '#333',
                railOpacity: 0.2
            });
        });
        $(document).ready(function () {
            // Open or close the chatbot
            $("#chatbot-toggle").click(function () {
                $("#chatbot-container").toggle();
            });

            $("#chatbot-close").click(function () {
                $("#chatbot-container").hide();
            });

            // Send message when clicking 'Send' button
            $("#send-message").click(function () {
                var userMessage = $("#user-message").val();
                if (userMessage.trim() !== "") {
                    appendMessage(userMessage, "user");
                    $("#user-message").val("");

                    // Cấu hình prompt với các thông số cần thiết
                    var promptMessage = {
                        "model": "gemini-1.5-flash-latest",  // Thay đổi model nếu cần
                        "messages": [
                            {
                                "role": "system",
                                "content": "Bạn là một chatbot hỗ trợ người dùng về các sản phẩm và dịch vụ của công ty,hiện tai trong kho có 6 sản phẩm . Hãy trả lời nhanh chóng và dễ hiểu."
                            },
                            {
                                "role": "user",
                                "content": userMessage  // `userMessage` cần được định nghĩa ở đâu đó trong mã của bạn
                            }
                        ],
                        "max_tokens": 150,  // Điều chỉnh số lượng token nếu cần
                        "temperature": 0.7  // Điều chỉnh độ sáng tạo trong câu trả lời
                    };

                    // Gửi yêu cầu API đến Yescale
                    $.ajax({
                        url: 'https://api.yescale.io/v1/chat/completions',  // URL API của Yescale
                        type: 'POST',
                        headers: {
                            "Content-Type": "application/json",
                            "Authorization": "Bearer sk-fkH9dNnFZIFBrz4m5PXhzNSzlJte2idIx4na14ig4jDV8vBl"  // Thay YOUR_API_KEY bằng API key thực tế của bạn
                        },
                        data: JSON.stringify(promptMessage),
                        success: function (response) {
                            // Kiểm tra phản hồi
                            if (response && response.choices && response.choices.length > 0) {
                                var botReply = response.choices[0].message.content;  // Đảm bảo rằng API trả về đúng định dạng
                                appendMessage(botReply, "bot");
                            } else {
                                appendMessage("Sorry, I couldn't process your request. Please try again later.", "bot");
                            }
                        },
                        error: function (xhr, status, error) {
                            // Xử lý lỗi chi tiết
                            console.error("Error:", error);
                            console.log("Status:", status);
                            console.log("Response:", xhr.responseText);  // In chi tiết phản hồi lỗi
                            appendMessage("Sorry, I couldn't process your request. Please try again later.", "bot");
                        }
                    });
                }
            });

            // Function to append messages to the chatbot
            function appendMessage(message, sender) {
                var messageClass = sender === "user" ? "user-message" : "bot-message";
                var messageHtml = `<div class="chatbot-message ${messageClass}">${message}</div>`;
                $("#chatbot-messages").append(messageHtml);
                $("#chatbot-messages").scrollTop($("#chatbot-messages")[0].scrollHeight);
            }
        });


    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
