    <script src="https://cdn.jsdelivr.net/npm/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet">
    <style>
        /* Toggle Sidebar */
        .sidebar.collapsed {
            width: 0;
            overflow: hidden;
            transition: width 0.3s ease;
        }

        .sidebar {
            width: 250px;
            transition: width 0.3s ease; /* Hiệu ứng thu gọn sidebar */
        }
        .sidebar:not(.collapsed) {
            width: 250px;
            transition: width 0.3s ease;
        }

        / /* Main content adjustment */
        .main-wrapper {
            margin-left: 250px; /* Khoảng cách khi sidebar đang mở */
            transition: margin-left 0.3s ease;
        }

        .sidebar.collapsed + .main-wrapper {
            margin-left: 0; /* Trả về toàn màn hình khi sidebar thu gọn */
        }
        /* Submenu Styling */
        .submenu_class {
            display: none;
        }

        .submenu.active > .submenu_class {
            display: block !important;
        }

        .main-wrapper {
            margin-left: 250px; /* Khoảng cách để nhường chỗ cho sidebar */
            padding: 20px; /* Khoảng cách bên trong để nội dung thoáng hơn */
            max-width: 100%; /* Đảm bảo không bị tràn */
            box-sizing: border-box; /* Tính cả padding vào kích thước */
        }

        .square-avatar {
            width: 31px; /* Kích thước chiều rộng */
            height: 31px; /* Kích thước chiều cao bằng chiều rộng để tạo khung vuông */
            object-fit: cover; /* Đảm bảo hình ảnh không bị méo */
            border-radius: 0; /* Đặt góc cạnh vuông */
            border: 1px solid #ccc; /* Thêm viền (tuỳ chọn) */
        }
        /* Sidebar cho mobile */
@@media (max-width: 768px) {
    .sidebar {
        position: fixed; /* Đặt sidebar cố định */
        top: 0;
        left: -250px; /* Mặc định ẩn bên ngoài */
        width: 250px;
        height: 100%;
        background-color: #fff;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        z-index: 1000;
    }

    .sidebar.collapsed {
        left: 0; /* Hiện sidebar khi có class 'collapsed' */
    }

    .main-wrapper {
        margin-left: 0;
    }
}

        .breadcrumb {
            margin-top:8px;
            display: inline-flex; /* Hiển thị các mục breadcrumb trên cùng hàng */
            background: none;
            list-style: none;
        }

        .header {
            display: flex;
            
            background-color: #f8f9fa; /* Màu nền thanh menu */
            border-bottom: 1px solid #ddd; /* Viền dưới */
        }
    </style>
</head>
