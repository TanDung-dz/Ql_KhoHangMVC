@model IEnumerable<Ql_KhoHang.Dtos.BlogDto>
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <h2>Danh Sách Blog</h2>

    <div class="mb-3 d-flex justify-content-between">
        <!-- Nút thêm mới blog -->
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> <!-- Biểu tượng thêm mới -->
        </a>

        <!-- Form tìm kiếm blog -->
        <form asp-action="Index" method="get" class="form-inline d-flex">
            <input type="text" name="keyword" class="form-control" placeholder="Search by keyword" value="@ViewBag.Keyword" />
            <button type="submit" class="btn btn-secondary ml-2">
                <i class="fas fa-search"></i> <!-- Biểu tượng tìm kiếm -->
            </button>
        </form>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã Blog</th>
                <th>Hình Ảnh</th>
                <th>Mô Tả</th>
                <th>Liên Kết</th>
                <th>Người Dùng</th>
                <th>Ẩn</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var blog in Model)
                {
                    <tr>
                        <td>@blog.BlogId</td>
                        <td>
                            @if (!string.IsNullOrEmpty(blog.Anh))
                            {
                                <img src="@blog.Anh" alt="Blog Image" width="50" height="50" />
                            }
                        </td>
                        <td>@blog.Mota</td>
                        <td>
                            @if (!string.IsNullOrEmpty(blog.Link))
                            {
                                <a href="@blog.Link" target="_blank">@blog.Link</a>
                            }
                        </td>
                        <td>@blog.TenNguoiDung</td>
                        <td>@(blog.Hide == true ? "Có" : "Không")</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@blog.BlogId" class="btn btn-info btn-sm" title="Chi tiết">
                                    <i class="fas fa-eye"></i> <!-- Biểu tượng chi tiết -->
                                </a>
                                <a asp-action="Edit" asp-route-id="@blog.BlogId" class="btn btn-warning btn-sm" title="Sửa">
                                    <i class="fas fa-edit"></i> <!-- Biểu tượng sửa -->
                                </a>
                                <form asp-action="Delete" asp-route-id="@blog.BlogId" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Xóa" onclick="return confirm('Bạn có chắc chắn muốn xóa blog này?');">
                                        <i class="fas fa-trash"></i> <!-- Biểu tượng xóa -->
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">Không có blog nào.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    <nav>
        <ul class="pagination">
            <!-- Nút quay lại -->
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage - 1)&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">
                        <i class="fas fa-angle-left"></i> <!-- Biểu tượng quay lại -->
                    </a>
                </li>
            }

            <!-- Danh sách các trang -->
            @for (var i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?pageNumber=@i&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">@i</a>
                </li>
            }

            <!-- Nút tiến -->
            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage + 1)&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">
                        <i class="fas fa-angle-right"></i> <!-- Biểu tượng tiến -->
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {
    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Hiển thị thông báo thành công
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Thành công!',
                    text: '@Html.Raw(TempData["SuccessMessage"])',
                    icon: 'success',
                    confirmButtonText: 'OK'
                            });
            </text>
        }

            // Hiển thị thông báo lỗi
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Lỗi!',
                    text: '@Html.Raw(TempData["ErrorMessage"])',
                    icon: 'error',
                    confirmButtonText: 'OK'
                            });
            </text>
        }
    </script>
}
