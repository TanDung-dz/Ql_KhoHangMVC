@model Ql_KhoHang.Dtos.NhacungcapDto
@{
    ViewData["Title"] = "Chỉnh Sửa Nhà Cung Cấp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm mt-4" style="top:-50px">
    <div class="card-header bg-primary text-white">
        <h4 class="card-title mb-0">Chỉnh Sửa Nhà Cung Cấp</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <!-- Input ẩn để giữ giá trị MaNhaCungCap -->
            <input type="hidden" asp-for="MaNhaCungCap" />

            <!-- Tên Nhà Cung Cấp -->
            <div class="form-group">
                <label for="TenNhaCungCap">Tên Nhà Cung Cấp</label>
                <input type="text" class="form-control" asp-for="TenNhaCungCap" placeholder="Tên nhà cung cấp" />
                <span asp-validation-for="TenNhaCungCap" class="text-danger"></span>
            </div>

            <!-- Địa Chỉ -->
            <div class="form-group">
                <label for="DiaChi">Địa Chỉ</label>
                <input type="text" class="form-control" asp-for="DiaChi" placeholder="Địa chỉ" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Số Điện Thoại -->
            <div class="form-group">
                <label for="Sdt">Số Điện Thoại</label>
                <input type="text" class="form-control" asp-for="Sdt" placeholder="Số điện thoại" />
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>

            <!-- Hình Ảnh -->
            <div class="form-group">
                <label for="Img">Hình Ảnh</label>
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <div>
                        <img src="@Model.Image" alt="Supplier Image" width="100" height="100" class="img-thumbnail mb-2" />
                    </div>
                }
                <input type="file" class="form-control-file" id="Img" name="Img" />
            </div>

            <!-- Nút hành động -->
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Lưu thay đổi
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Validation Scripts -->
    <partial name="_ValidationScriptsPartial" />
    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Hiển thị thông báo thành công
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Thành công!',
                    text: '@Html.Raw(TempData["SuccessMessage"])',
                    icon: 'success',
                    confirmButtonText: 'OK'
                                });
            </text>
        }

            // Hiển thị thông báo lỗi
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Lỗi!',
                    text: '@Html.Raw(TempData["ErrorMessage"])',
                    icon: 'error',
                    confirmButtonText: 'OK'
                                });
            </text>
        }
    </script>
}
