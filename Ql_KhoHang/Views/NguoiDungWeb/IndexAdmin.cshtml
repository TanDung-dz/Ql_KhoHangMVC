@model IEnumerable<Ql_KhoHang.Dtos.NguoiDungWebDtos>
@{
    ViewData["Title"] = "Danh Sách Người Dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid px-3 my-3">
            <h2>Danh Sách Người Dùng</h2>

            <div class="mb-3 d-flex justify-content-between">
                <!-- Nút thêm mới người dùng -->
                <a asp-action="Create" class="btn btn-primary">Thêm Mới Người Dùng</a>

                <!-- Form tìm kiếm người dùng -->
                <form asp-action="IndexAdmin" method="get" class="form-inline d-flex">
                    <input type="text" name="keyword" class="form-control" placeholder="Tìm kiếm..." value="@ViewBag.Keyword" />
                    <button type="submit" class="btn btn-secondary ml-2">Tìm Kiếm</button>
                </form>
            </div>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mã Người Dùng</th>
                        <th>Tên Đăng Nhập</th>
                        <th hidden>Mật khẩu</th>
                        <th>Tên Người Dùng</th>
                        <th>Email</th>
                        <th>Số Điện Thoại</th>
                        <th>Ngày đăng ký</th>
                        <th>Quyền</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.MaNguoiDung</td>
                            <td>@user.TenDangNhap</td>
                            <td hidden>@user.MatKhau</td>
                            <td>@(user.TenNguoiDung ?? "NULL")</td>
                            <td>@user.Email</td>
                            <td>@user.Sdt</td>
                            <td>@user.NgayDk</td>
                            <td>@user.Quyen</td>
                            <td>
                                <!-- Nút hành động -->
                                <a asp-action="Details" asp-route-id="@user.MaNguoiDung" class="btn btn-info btn-sm">Chi tiết</a>
                                <a asp-action="Edit" asp-route-id="@user.MaNguoiDung" class="btn btn-warning btn-sm">Sửa</a>
                                <form asp-action="Delete" asp-route-id="@user.MaNguoiDung" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">Xóa</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Phân trang -->
            <nav>
                <ul class="pagination">
                    <!-- Nút quay lại -->
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage - 1)&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">Trước</a>
                        </li>
                    }

                    <!-- Danh sách các trang -->
                    @for (var i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="?pageNumber=@i&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">@i</a>
                        </li>
                    }

                    <!-- Nút tiến -->
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage + 1)&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">Sau</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>
@section Scripts {
    <!-- Validation Scripts -->
    <partial name="_ValidationScriptsPartial" />
    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Hiển thị thông báo thành công
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Thành công!',
                    text: '@Html.Raw(TempData["SuccessMessage"])',
                    icon: 'success',
                    confirmButtonText: 'OK'
                                                });
            </text>
        }

            // Hiển thị thông báo lỗi
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Lỗi!',
                    text: '@Html.Raw(TempData["ErrorMessage"])',
                    icon: 'error',
                    confirmButtonText: 'OK'
                                                });
            </text>
        }
    </script>
}
