@model Ql_KhoHang.Dtos.NguoiDungWebDtos

@{
    ViewData["Title"] = "Chi Tiết Người Dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid px-3 my-3">
            <h2>Chi Tiết Người Dùng</h2>
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Mã Người Dùng:</dt>
                        <dd class="col-sm-9">@Model.MaNguoiDung</dd>

                        <dt class="col-sm-3">Tên Đăng Nhập:</dt>
                        <dd class="col-sm-9">@Model.TenDangNhap</dd>

                        <dt class="col-sm-3">Tên Người Dùng:</dt>
                        <dd class="col-sm-9">@Model.TenNguoiDung</dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Số Điện Thoại:</dt>
                        <dd class="col-sm-9">@Model.Sdt</dd>

                        <dt class="col-sm-3">Ngày Đăng Ký:</dt>
                        <dd class="col-sm-9">@Model.NgayDk?.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-3">Quyền:</dt>
                        <dd class="col-sm-9">@Model.Quyen</dd>
                    </dl>
                </div>
            </div>
            <a asp-action="Index2" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div>
