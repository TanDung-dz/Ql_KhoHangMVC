@model Ql_KhoHang.Dtos.NguoiDungWebDtos

@{
    ViewData["Title"] = "Chỉnh Sửa Người Dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid px-3 my-3">
            <h2>Chỉnh Sửa Người Dùng</h2>
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" name="MaNguoiDung" value="@Model.MaNguoiDung" />
                        <div class="mb-3">
                            <label for="TenDangNhap" class="form-label">Tên Đăng Nhập</label>
                            <input type="text" class="form-control" id="TenDangNhap" name="TenDangNhap" value="@Model.TenDangNhap" required>
                        </div>
                        <div class="mb-3">
                            <label for="TenNguoiDung" class="form-label">Tên Người Dùng</label>
                            <input type="text" class="form-control" id="TenNguoiDung" name="TenNguoiDung" value="@Model.TenNguoiDung" required>
                        </div>
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required>
                        </div>
                        <div class="mb-3">
                            <label for="Sdt" class="form-label">Số Điện Thoại</label>
                            <input type="number" class="form-control" id="Sdt" name="Sdt" value="@Model.Sdt">
                        </div>
                        <div class="mb-3">
                            <label for="Quyen" class="form-label">Quyền</label>
                            <select class="form-control" id="Quyen" name="Quyen">
                                <option value="0">Người dùng</option>
                                <option value="1">Quản trị viên</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-warning">Cập Nhật</button>
                        <a asp-action="Index2" class="btn btn-secondary">Quay lại</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
