@model IEnumerable<Ql_KhoHang.Dtos.NhanVienKhoDto>
@{
    ViewData["Title"] = "Nhân Viên Kho";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <h2>Danh Sách Nhân Viên Kho</h2>

    <div class="mb-3 d-flex justify-content-between">
        <!-- Nút thêm mới nhân viên -->
        <a asp-action="Create" class="btn btn-primary" data-bs-toggle="tooltip" title="Thêm mới nhân viên">
            <i class="fas fa-plus"></i>
        </a>

        <!-- Form tìm kiếm nhân viên -->
        <form asp-action="Index" method="get" class="form-inline d-flex">
            <input type="text" name="keyword" class="form-control" placeholder="Tìm kiếm theo tên" value="@ViewBag.Keyword" />
            <button type="submit" class="btn btn-secondary ml-2" data-bs-toggle="tooltip" title="Tìm kiếm">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã Nhân Viên</th>
                <th>Tên Nhân Viên</th>
                <th>Email</th>
                <th>SĐT</th>
                <th>Ngày Sinh</th>
                <th>Hình Ảnh</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.MaNhanVienKho</td>
                    <td>@employee.TenNhanVien</td>
                    <td>@employee.Email</td>
                    <td>@employee.Sdt</td>
                    <td>@employee.NamSinh?.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(employee.Hinhanh))
                        {
                            <img src="@employee.Hinhanh" alt="@employee.TenNhanVien" width="50" height="50" />
                        }
                    </td>
                    <td>
                        <!-- Nút hành động -->
                        <a asp-action="Details" asp-route-id="@employee.MaNhanVienKho" class="btn btn-info btn-sm" data-bs-toggle="tooltip" title="Xem chi tiết">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@employee.MaNhanVienKho" class="btn btn-warning btn-sm" data-bs-toggle="tooltip" title="Chỉnh sửa">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form asp-action="Delete" asp-route-id="@employee.MaNhanVienKho" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" data-bs-toggle="tooltip" title="Xóa" onclick="return confirm('Bạn có chắc chắn muốn xóa nhân viên này?');">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    <nav>
        <ul class="pagination">
            <!-- Nút quay lại -->
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage - 1)&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword" data-bs-toggle="tooltip" title="Trang trước">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                </li>
            }

            <!-- Danh sách các trang -->
            @for (var i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?pageNumber=@i&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">@i</a>
                </li>
            }

            <!-- Nút tiến -->
            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage + 1)&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword" data-bs-toggle="tooltip" title="Trang sau">
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            // Kích hoạt tooltip
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        // Hiển thị thông báo thành công
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Thành công!',
                    text: '@Html.Raw(TempData["SuccessMessage"])',
                    icon: 'success',
                    confirmButtonText: 'OK'
                            });
            </text>
        }

            // Hiển thị thông báo lỗi
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Lỗi!',
                    text: '@Html.Raw(TempData["ErrorMessage"])',
                    icon: 'error',
                    confirmButtonText: 'OK'
                            });
            </text>
        }
    </script>
}
