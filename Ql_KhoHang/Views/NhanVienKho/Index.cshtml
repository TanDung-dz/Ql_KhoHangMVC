@model IEnumerable<Ql_KhoHang.Dtos.NhanVienKhoDto>
@{
    ViewData["Title"] = "Danh Sách Nhân Viên Kho";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid px-3 my-3">
            <div class="row">
                <h2>Danh Sách Nhân Viên Kho</h2>

                <div class="mb-3 d-flex justify-content-between">
                    <!-- Nút thêm mới nhân viên -->
                    <a asp-action="Create" class="btn btn-primary">Thêm Mới Nhân Viên</a>

                    <!-- Form tìm kiếm nhân viên -->
                    <form asp-action="Index" method="get" class="form-inline d-flex">
                        <input type="text" name="keyword" class="form-control" placeholder="Tìm kiếm theo tên" value="@ViewBag.Keyword" />
                        <button type="submit" class="btn btn-secondary ml-2">Tìm kiếm</button>
                    </form>
                </div>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Mã Nhân Viên</th>
                            <th>Tên Nhân Viên</th>
                            <th>Email</th>
                            <th>SĐT</th>
                            <th>Ngày Sinh</th>
                            <th>Hình Ảnh</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@employee.MaNhanVienKho</td>
                                <td>@employee.TenNhanVien</td>
                                <td>@employee.Email</td>
                                <td>@employee.Sdt</td>
                                <td>@employee.NamSinh?.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(employee.Hinhanh))
                                    {
                                        <img src="@employee.Hinhanh" alt="@employee.TenNhanVien" width="50" height="50" />
                                    }
                                </td>
                                <td>
                                    <!-- Nút hành động -->
                                    <a asp-action="Details" asp-route-id="@employee.MaNhanVienKho" class="btn btn-info btn-sm">Chi tiết</a>
                                    <a asp-action="Edit" asp-route-id="@employee.MaNhanVienKho" class="btn btn-warning btn-sm">Sửa</a>
                                    <form asp-action="Delete" asp-route-id="@employee.MaNhanVienKho" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa nhân viên này?');">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Phân trang -->
                <nav>
                    <ul class="pagination">
                        <!-- Nút quay lại -->
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage - 1)&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">Trước</a>
                            </li>
                        }

                        <!-- Danh sách các trang -->
                        @for (var i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?pageNumber=@i&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">@i</a>
                            </li>
                        }

                        <!-- Nút tiến -->
                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?pageNumber=@(ViewBag.CurrentPage + 1)&pageSize=@ViewBag.PageSize&keyword=@ViewBag.Keyword">Sau</a>
                            </li>
                        }
                    </ul>
                </nav>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                        Swal.fire({
                            title: 'Thành công!',
                            text: '@Html.Raw(TempData["SuccessMessage"])',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        });
            </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                        Swal.fire({
                            title: 'Lỗi!',
                            text: '@Html.Raw(TempData["ErrorMessage"])',
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
            </text>
        }
    </script>
}
